<% include ../partials/header %>

<div class="container">
    <div class="row mt-10">
    <% for(var i=0; i<results.length; i++) {%>
    <div class="col-md-4">
        <div class="card">

            <div class="card-body flex">
                <div class="mr-15">
                    <a class="black" href="/topics/<%= results[i].id %>"><img src="<%= results[i].src %>" class="card-img-top topicList" alt="..."></a>
                </div>
                <div class="pt-10">
                    <a class="black" href="/topics/<%= results[i].id %>"><h5 class="card-title"><%= results[i].title %></h5></a>
                    <div>
                        <span class="gray"><%= results[i].description %></span>
                    </div>
                </div>
            </div>
            </div>
        </div>
    <% } %>
    </div>
</div>
<% include ../partials/footer %>
