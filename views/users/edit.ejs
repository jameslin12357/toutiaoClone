<% include ../partials/header %>

<div class="container">
    <div class="row mt-50">
        <div class="col-md-4 offset-md-4">
            <h2 class="text-center mb-15">编辑用户</h2>
            <form action="/users/<%= results[0].id %>/edit" method="post">
                <div class="form-group">
                    <input type="email" class="form-control" name="email" value="<%= results[0].email %>" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="输入邮箱" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="输入密码" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="username" value="<%= results[0].username %>" id="exampleInputPassword1" placeholder="输入用户名" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="bio" value="<%= results[0].bio %>" id="exampleInputPassword1" placeholder="输入简介" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">提交</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>
